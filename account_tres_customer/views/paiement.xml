<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Modèle chèque tree view -->
        <record id="cheque_model_client_tree" model="ir.ui.view">
            <field name="name">cheque.model.client.tree</field>
            <field name="model">paiement.cheque.model.client</field>
            <field name="arch" type="xml">
                <tree string="Modèle chèque">
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="received_account"/>
                    <field name="at_bank_account"/>
                    <field name="post"/>
                </tree>
            </field>
        </record>

        <!-- Modèle chèque form view -->
        <record id="cheque_model_view_form" model="ir.ui.view">
            <field name="name">cheque.model.form.view</field>
            <field name="model">paiement.cheque.model.client</field>
            <field name="arch" type="xml">
                <form string="Modèle chèque">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="received_account"/>
                            <field name="at_bank_account"/>
                            <field name="post"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Modèle effet client tree view -->
        <record id="paiement_effet_model_client_view_tree" model="ir.ui.view">
            <field name="name">paiement.effet.model.client.tree.view</field>
            <field name="model">paiement.effet.model.client</field>
            <field name="arch" type="xml">
                <tree string="Modèle effet client">
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="received_account"/>
                    <field name="at_bank_account"/>
                    <field name="bank_account"/>
                    <field name="post"/>
                </tree>
            </field>
        </record>

        <!-- Modèle effet client form view -->
        <record id="paiement_effet_model_client_view_form" model="ir.ui.view">
            <field name="name">paiement.effet.model.client.form.view</field>
            <field name="model">paiement.effet.model.client</field>
            <field name="arch" type="xml">
                <form string="Modele effet client">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="received_account"/>
                            <field name="at_bank_account"/>
                            <field name="bank_account"/>
                            <field name="bank_journal_id"/>
                            <field name="post"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Cash client search -->
        <record id="view_cash_client_filter" model="ir.ui.view">
            <field name="name">Cash Clients</field>
            <field name="model">paiement.cash.client</field>
            <field name="arch" type="xml">
                <search string="Espèce Client">
                    <filter string="Confirme" name="done" domain="[('state','=','done')]"/>
                    <filter string="Brouillon" name="drafe" domain="[('state','=','draft')]"/>
                    <separator/>
                    <field name="name"/>
                    <field name="client"/>
                    <field name="amount"/>
                    <field name="caisse_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <separator/>
                    <field name="journal_id"/>
                    <field name="date"/>
                    <group expand="0" string="Group By...">
                        <filter string="Client" name="client" domain="[]" context="{'group_by':'client'}"/>
                        <filter string="Caisse" name="caisse" domain="[]" context="{'group_by':'caisse_id'}"/>
                        <filter string="Banque" name="journal" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Date" name="date" domain="[]" context="{'group_by':'date'}"/>
                        <filter string="Statut" name="state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Cash client tree view -->
        <record model="ir.ui.view" id="cash_client_tree_view">
            <field name="name">Cash Client</field>
            <field name="model">paiement.cash.client</field>
            <field name="arch" type="xml">
                <tree string="Espèce Client">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="client"/>
                    <field name="amount" sum="Total"/>
                    <field name="date"/>
                    <field name="paiement_record_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Cash client form view -->
        <record model="ir.ui.view" id="cash_form_client_view">
            <field name="name">cash.form.client.view</field>
            <field name="model">paiement.cash.client</field>
            <field name="arch" type="xml">
                <form string="Espèce Client">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,caisse,caisse_centrale,done"/>
                        <button name="action_caisse" string="Caisse" states="draft" type="object" class="oe_highlight"/>
                        <button name="action_caisse_centrale" string="Caisse centrale" states="caisse" type="object"
                                class="oe_highlight"/>
                        <button name="action_done" states="caisse_centrale" string="Confirmer" type="object"
                                class="oe_highlight"/>
                        <button name="action_cancel" states="draft" type="object" string="Annuler"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="journal_id"/>
                                <field name="client"/>
                                <field name="caisse_id"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="paiement_record_id"/>
                                <field name="date"/>
                                <field name="amount"/>
                                <field name="analytic_account_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="note" nolabel="1"/>
                                <group>
                                    <field name="origin" attrs="{'invisible':[('origin','=',False)]}"/>
                                </group>
                            </page>
                            <page string="Écritures comptables" name="move_live_ids">
                                <field name="move_line_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ov client calendar -->
        <record model="ir.ui.view" id="ov_client_calendar_view">
            <field name="name">OV Clients</field>
            <field name="model">paiement.ov.client</field>
            <field name="arch" type="xml">
                <calendar string="OV Clients" date_start="date" date_stop="due_date" color="client">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <!-- OV Clients Graph -->
        <record model="ir.ui.view" id="ov_client_graph_view">
            <field name="name">OV Clients</field>
            <field name="model">paiement.ov.client</field>
            <field name="arch" type="xml">
                <graph string="OV Clients" type="bar">
                    <field name="client"/>
                    <field name="amount" operator="+"/>
                </graph>
            </field>
        </record>

        <!-- OV Client Search -->
        <record id="view_ov_client_filter" model="ir.ui.view">
            <field name="name">OV Clients</field>
            <field name="model">paiement.ov.client</field>
            <field name="arch" type="xml">
                <search string="OV Clients">
                    <filter string="Confirme" name="done" domain="[('state','=','done')]"/>
                    <filter string="Brouillon" name="drafe" domain="[('state','=','draft')]"/>
                    <separator/>
                    <field name="name"/>
                    <field name="client"/>
                    <field name="amount"/>
                    <field name="paiement_record_id"/>
                    <field name="caisse_id"/>
                    <newline/>
                    <field name="journal_id"/>
                    <field name="date"/>
                    <field name="due_date"/>
                    <group expand="0" string="Group By...">
                        <filter string="Client" name="client" domain="[]" context="{'group_by':'client'}"/>
                        <filter string="Banque" name="journal" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Caisse" name="caisse" domain="[]" context="{'group_by':'caisse_id'}"/>
                        <filter string="Date" name="date" domain="[]" context="{'group_by':'date'}"/>
                        <filter string="Echéance" name="due_date" domain="[]" context="{'group_by':'due_date'}"/>
                        <filter string="Statut" name="state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- OV Client Tree View -->
        <record model="ir.ui.view" id="ov_client_tree_view">
            <field name="name">OV client</field>
            <field name="model">paiement.ov.client</field>
            <field name="arch" type="xml">
                <tree string="OV">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="client"/>
                    <field name="amount" sum="Total"/>
                    <field name="date"/>
                    <field name="due_date"/>
                    <field name="paiement_record_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- OV client form view -->
        <record model="ir.ui.view" id="ov_form_client_view">
            <field name="name">OV</field>
            <field name="model">paiement.ov.client</field>
            <field name="arch" type="xml">
                <form string="OV">
                    <header>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,caisse,caisse_centrale,done,rejected"/>
                        <button name="action_caisse" string="Caisse" states="draft" type="object" class="oe_highlight"/>
                        <button name="action_caisse_centrale" string="Caisse centrale" type="object" states="caisse"
                                class="oe_highlight"/>
                        <button name="action_done" states="caisse_centrale" string="Confirmer" type="object"
                                class="oe_highlight"/>
                        <button name="action_cancel" states="draft" string="Annuler" type="object"/>
                        <button name="action_rejected" states="caisse_centrale" string="Rejet" type="object"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="journal_id"/>
                                <field name="due_date"/>
                                <field name="amount"/>
                                <field name="analytic_account_id"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="paiement_record_id"/>
                                <field name="date"/>
                                <field name="client"/>
                                <field name="caisse_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="note" nolabel="1"/>
                                <group>
                                    <field name="origin" attrs="{'invisible':[('origin','=',False)]}"/>
                                </group>
                            </page>
                            <page string="Écritures comptables" name="move_live_ids">
                                <field name="move_line_ids" nolabel="1"/>
                            </page>
                            <page string="Frais Bancaires" name="tres_fees_ids">
                                <field name="tres_fees_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="account_id" attrs="{'readonly':[('state','=','done')]}"/>
                                        <field name="amount" sum="Total" attrs="{'readonly':[('state','=','done')]}"/>
                                        <field name="move_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                                <button type="object" name="action_post_fees" string="Poster" icon="gtk-ok"/>
                            </page>
                        </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Effet Client Calendar -->
        <record model="ir.ui.view" id="effet_client_calendar_view">
            <field name="name">Effet Clients</field>
            <field name="model">paiement.effet.client</field>
            <field name="arch" type="xml">
                <calendar string="Effets Clients" date_start="date" date_stop="due_date"  color="client">
