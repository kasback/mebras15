                    <field name="paiement_record_id"/>
                    <field name="journal_id"/>
                    <field name="due_date"/>

                    <filter string="Confirmer" name="done" domain="[('state','=','done')]"/>
                    <filter string="Brouillon" name="drafe" domain="[('state','=','draft')]"/>
                    <group expand="0" string="Group By...">
                        <filter string="Client" name="client" domain="[]" context="{'group_by':'client'}"/>
                        <filter string="Caisse" name="caisse" domain="[]" context="{'group_by':'caisse_id'}"/>
                        <filter string="Société" name="company" domain="[]" context="{'group_by':'company_id'}"
                                groups="base.group_multi_company"/>
                        <filter string="Banque" name="journal" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Date" name="date" domain="[]" context="{'group_by':'date'}"/>
                        <filter string="Echéance" name="due_date" domain="[]" context="{'group_by':'due_date'}"/>
                        <filter string="Statut" name="state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Effets Client Tree View -->

        <record model="ir.ui.view" id="effet_client_tree_view">
            <field name="name">Effets Clients</field>
            <field name="model">paiement.effet.client</field>
            <field name="arch" type="xml">
                <tree string="Effets">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="client"/>
                    <field name="amount" sum="Total"/>
                    <field name="date"/>
                    <field name="due_date"/>
                    <field name="paiement_record_id"/>
                    <field name="bank_client"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Effets Client Form View -->

        <record model="ir.ui.view" id="effet_form_client_view">
            <field name="name">Effets</field>
            <field name="model">paiement.effet.client</field>
            <field name="arch" type="xml">
                <form string="Effets">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_caisse" string="Caisse" states="draft" type="object" class="oe_highlight"/>
                        <button name="action_caisse_centrale" string="Caisse centrale" states="caisse" type="object"
                                class="oe_highlight"/>
                        <button name="action_received" states="caisse_centrale" string="Recu" type="object"
                                class="oe_highlight"/>
                        <button name="action_at_bank" states="received" string="Encaisse" type="object"
                                class="oe_highlight"/>
                        <button name="action_payed" states="at_bank" string="Paye" type="object" class="oe_highlight"/>
                        <button name="action_cancel" string="Annuler" states="draft" type="object"/>
                        <button name="action_rejected" states="at_bank" string="Rejeter" type="object"/>
                        <button name="action_to_represent" states="rejected" type="object" string="A représenter"
                                class="oe_highlight"/>
                        <button name="effet_to_change" states="rejected" type="object" string="A changer"
                                class="oe_highlight"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="journal_id" required="1" domain="[('type', '=', 'general')]"/>
                                <field name="date"/>
                                <field name="client"/>
                                <field name="caisse_id"/>
                                <field name="rejete"
                                       attrs="{'invisible':[('state','not in',['rejected','to_represent','to_change'])]}"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="paiement_record_id"/>
                                <field name="model_id"/>
                                <field name="due_date"/>
                                <field name="amount"/>
                                <field name="analytic_account_id"/>
                                <field name="bank_client" domain="[('partner_id','=',client)]"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="note" nolabel="1"/>
                                <group>
                                    <field name="at_bank_date"/>
                                    <field name="payed_date"/>
                                </group>
                                <group>
                                    <field name="effet_origin_id"
                                           attrs="{'invisible':[('effet_origin_id','=',False)]}"/>
                                    <field name="origin" attrs="{'invisible':[('origin','=',False)]}"/>
                                </group>
                            </page>
                            <page string="Écritures comptables" name="move_live_ids">
                                <field name="move_line_ids" nolabel="1"/>
                            </page>
                            <page string="Frais Bancaires" name="tres_fees_ids">
                                <field name="tres_fees_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="account_id" attrs="{'readonly':[('state','=','done')]}"/>
                                        <field name="amount" sum="Total" attrs="{'readonly':[('state','=','done')]}"/>
                                        <field name="move_id"/>
                                        <field name="state" widget="statusbar"
                                               statusbar_visible="draft,caisse,caisse_centrale,received,at_bank,payed"/>
                                    </tree>
                                </field>
                                <button type="object" name="action_post_fees" string="Poster" icon="gtk-ok"/>
                            </page>
                        </notebook>
                    </sheet>
<!--
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
-->
                </form>
            </field>
        </record>

